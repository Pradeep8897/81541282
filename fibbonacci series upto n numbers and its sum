#include <stdio.h>

int fibonacci(int n) {
    if (n <= 1) {
        return n; // Base case: return n if n <= 1
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2); // Recursively calculate Fibonacci series
    }
}

int main() {
    int num;
    printf("Enter the number of terms for the Fibonacci series: ");
    scanf("%d", &num);

    if (num <= 0) {
        printf("Number of terms should be greater than zero.\n");
    } else {
        printf("Fibonacci Series up to %d terms:\n", num);
        for (int i = 0; i < num; i++) {
            printf("%d ", fibonacci(i));
        }
        printf("\n");
    }

    return 0;
}
